<Page x:Class="Chapter15.HelloWPF.datagrid"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="326"
	Title="datagrid">

    <Grid>
        <DataGrid AutoGenerateColumns="False" Height="202" HorizontalAlignment="Left" Margin="21,36,0,0" Name="dataGrid1" VerticalAlignment="Top" Width="293">
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name"  Width="100" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Last Name"   Width="200" Binding="{Binding LastName}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
